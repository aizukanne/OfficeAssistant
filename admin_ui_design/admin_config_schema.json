  "ui_metadata": {
    "layout": "tabs",
    "save_button_text": "Save Configuration",
    "reset_button_text": "Reset to Defaults",
    "test_connection_text": "Test Connection",
    "export_button_text": "Export .env File",
    "import_button_text": "Import from .env",
    "validation_on_blur": true,
    "show_env_var_names": true,
    "enable_search": true,
    "enable_bulk_edit": false,
    "confirm_before_reset": true,
    "auto_save": false,
    "show_modified_indicator": true
  },
  "security_best_practices": {
    "secret_fields": {
      "mask_by_default": true,
      "show_last_n_chars": 4,
      "require_confirmation_to_view": true,
      "encrypt_at_rest": true,
      "never_log": true
    },
    "validation": {
      "test_connection_on_save": true,
      "validate_format_before_save": true,
      "check_duplicate_values": false
    },
    "audit": {
      "log_all_changes": true,
      "track_who_changed": true,
      "track_when_changed": true,
      "retain_history": true
    }
  },
  "dependencies": {
    "erpnext_api_key": ["erpnext_base_url"],
    "erpnext_api_secret": ["erpnext_base_url"],
    "odoo_db": ["odoo_url"],
    "odoo_login": ["odoo_url"],
    "odoo_password": ["odoo_url"]
  },
  "conditional_display": {
    "show_if_enabled": {
      "enable_odoo_integration": ["odoo_url", "odoo_db", "odoo_login", "odoo_password"],
      "enable_erpnext_integration": ["erpnext_base_url", "erpnext_api_key", "erpnext_api_secret"],
      "enable_slack_integration": ["slack_bot_token", "slack_usernames_table", "channels_table"],
      "enable_telegram_integration": ["telegram_bot_token", "telegram_message_length", "telegram_file_size_limit"],
      "enable_weather_service": ["openweather_key"],
      "enable_google_calendar": ["google_calendar_id", "google_api_key"]
    }
  },
  "validation_rules": {
    "api_key_patterns": {
      "openai": "^sk-[A-Za-z0-9-_]+$",
      "slack": "^xoxb-[A-Za-z0-9-]+$",
      "telegram": "^[0-9]+:[A-Za-z0-9_-]+$"
    },
    "url_patterns": {
      "http_https": "^https?://[a-zA-Z0-9.-]+(:[0-9]+)?$",
      "https_only": "^https://[a-zA-Z0-9.-]+(:[0-9]+)?$"
    }
  }
